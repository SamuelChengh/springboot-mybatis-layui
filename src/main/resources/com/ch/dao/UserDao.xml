<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ch.dao.sys.UserDao">
    <insert id="insert" parameterType="com.ch.entity.sys.User" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO user (
        `name`,
        `age`,
        `status`,
        `created_date`
        ) VALUES (
        #{name},
        #{age},
        1,
        #{createdDate}
        )
    </insert>

    <update id="update" parameterType="com.ch.entity.sys.User">
        UPDATE user
        <set>
            <if test="name != null"> `name` = #{name}, </if>
            <if test="age != null"> `age` = #{age}, </if>
            <if test="status != null"> `status` = #{status}, </if>
            <if test="updatedDate != null"> `updated_date` = #{updatedDate}, </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" >
        DELETE FROM user
        <where>
            `id`=#{id}
        </where>
    </delete>

    <select id="findById" resultType="com.ch.entity.sys.User">
        SELECT * FROM user
        <where>
            `id`=#{id}
        </where>
    </select>

    <select id="findAll" resultType="com.ch.entity.sys.User">
        SELECT * FROM user
    </select>

</mapper>

