<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ch.dao.sys.MenuDao">
    <!-- Menu -->
    <resultMap id="MenuResult" type="Menu">
        <id column="id" property="id"/>
        <result column="menu_name" property="menuName"/>
        <result column="menu_url" property="menuUrl"/>
        <result column="parent_id" property="parentId"/>
        <result column="display_sort" property="displaySort"/>
        <result column="display_type" property="displayType"/>
        <result column="permission" property="permission"/>
        <result column="icon" property="icon"/>
        <result column="remark" property="remark"/>
        <result column="created_date" property="createdDate"/>
        <result column="updated_date" property="updatedDate"/>
    </resultMap>

    <!-- all column -->
    <sql id="all_column">
        id,
        menu_name,
        menu_url,
        parent_id,
        display_sort,
        display_type,
        permission,
        icon,
        remark,
        created_date,
        updated_date
    </sql>

    <!-- query conditions -->
    <sql id="select_query_conditions">
        <if test="menuName != null and menuName != ''">
            AND menu_name LIKE CONCAT("%",#{menuName},"%")
        </if>
    </sql>

    <!-- order conditions -->
    <sql id="select_order_conditions">
        ORDER BY display_sort ASC
    </sql>

    <select id="findAll" resultMap="MenuResult">
        SELECT
            <include refid="all_column"></include>
        FROM
            sys_menu
        WHERE
            1 = 1
        <include refid="select_query_conditions"></include>
        <include refid="select_order_conditions"></include>
    </select>

    <select id="findByDisplayType" resultMap="MenuResult">
        SELECT
            <include refid="all_column"></include>
        FROM
            sys_menu
        WHERE
            display_type = #{displayType}
        <include refid="select_order_conditions"></include>
    </select>

    <select id="findByUserName" resultMap="MenuResult" parameterType="java.lang.String">
        SELECT
		    m.id,
            m.menu_name,
            m.menu_url,
            m.parent_id,
            m.display_sort,
            m.display_type,
            m.permission,
            m.icon,
            m.remark,
            m.created_date,
            m.updated_date
		FROM
            sys_user u,
            sys_user_role ur,
            sys_role r,
            sys_role_menu rm,
            sys_menu m
		WHERE
		    u.id = ur.user_id
		AND
		    ur.role_id = r.id
		AND
		    r.id = rm.role_id
		AND
		    rm.menu_id = m.id
		AND
		    u.user_name = #{userName}
		GROUP BY m.id
		ORDER BY m.display_sort ASC
    </select>
</mapper>