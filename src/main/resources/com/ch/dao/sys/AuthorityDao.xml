<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ch.dao.sys.AuthorityDao">

    <insert id="insert" parameterType="com.ch.entity.sys.Authority" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO sys_authority (
            `name`,
            `auth_url`,
            `parent`,
            `display_sort`,
            `display_type`,
            `icon`,
            `remark`,
            `created_date`
        ) VALUES (
            #{name},
            #{authUrl},
            #{parent},
            #{displaySort},
            #{displayType},
            #{icon},
            #{remark},
            NOW()
        )
    </insert>

    <update id="update" parameterType="com.ch.entity.sys.Authority">
        UPDATE sys_authority
        <set>
            <if test="name != null"> `name` = #{name}, </if>
            <if test="authUrl != null"> `auth_url` = #{authUrl}, </if>
            <if test="parent != null"> `parent` = #{parent}, </if>
            <if test="displaySort != null"> `display_sort` = #{displaySort}, </if>
            <if test="displayType != null"> `display_type` = #{displayType}, </if>
            <if test="icon != null"> `icon` = #{icon}, </if>
            <if test="remark != null"> `remark` = #{remark}, </if>
            `updated_date` = NOW(),
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM sys_authority WHERE `id` = #{id}
    </delete>

    <!-- 查询sql片段 -->
    <sql id="select_query_conditions">
        <if test="name != null and name != ''">
            AND name LIKE CONCAT("%",#{name},"%")
        </if>
    </sql>

    <!-- 排序sql片段 -->
    <sql id="select_order_conditions">
        ORDER BY display_sort ASC
    </sql>

    <select id="findById" resultType="com.ch.entity.sys.Authority">
        SELECT
            id,
            name,
            auth_url,
            parent,
            display_sort,
            display_type,
            icon,
            remark,
            created_date,
            updated_date
        FROM
            sys_authority
        WHERE
            id = #{id}
    </select>

    <select id="findAll" resultType="com.ch.entity.sys.Authority">
        SELECT
            id,
            name,
            auth_url,
            parent,
            display_sort,
            display_type,
            icon,
            remark,
            created_date,
            updated_date
        FROM
            sys_authority
        <where>
            <include refid="select_query_conditions"></include>
        </where>
        <include refid="select_order_conditions"></include>
    </select>

    <select id="findByParent" resultType="com.ch.entity.sys.Authority">
        SELECT
            id,
            name,
            auth_url,
            parent,
            display_sort,
            display_type,
            icon,
            remark,
            created_date,
            updated_date
        FROM
            sys_authority
        WHERE
            parent = #{parent}
        <include refid="select_order_conditions"></include>
    </select>

</mapper>