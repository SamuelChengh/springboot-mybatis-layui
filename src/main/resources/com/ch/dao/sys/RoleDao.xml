<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ch.dao.sys.RoleDao">

    <!-- role -->
    <resultMap id="RoleResult" type="com.ch.entity.sys.Role">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="remark" property="remark" />
        <result column="created_date" property="createdDate" />
        <result column="updated_date" property="updatedDate" />
    </resultMap>

    <!-- role with authority -->
    <resultMap id="RoleAuthorityResult" type="com.ch.entity.sys.Role" extends="RoleResult">
        <collection property="authorities" ofType="com.ch.entity.sys.Authority">
            <id column="auth_id" property="id" />
            <result column="auth_name" property="name" />
            <result column="auth_url" property="authUrl" />
            <result column="parent" property="parent" />
            <result column="display_sort" property="displaySort" />
            <result column="auth_remark" property="remark" />
            <result column="auth_created_date" property="createdDate" />
            <result column="auth_updated_date" property="updatedDate" />
        </collection>
    </resultMap>

    <insert id="insert" parameterType="com.ch.entity.sys.Role" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO sys_role (
            `name`,
            `remark`,
            `created_date`
        ) VALUES (
            #{name},
            #{remark},
            NOW()
        )
    </insert>

    <update id="update" parameterType="com.ch.entity.sys.Role">
        UPDATE sys_role
        <set>
            <if test="name != null"> `name` = #{name}, </if>
            <if test="remark != null"> `remark` = #{remark}, </if>
            `updated_date` = NOW(),
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM sys_role WHERE `id` = #{id}
    </delete>

    <!-- 查询sql片段 -->
    <sql id="select_query_conditions">
        <if test="name != null and name != ''">
            AND name LIKE CONCAT("%",#{name},"%")
        </if>
    </sql>

    <!-- 排序sql片段 -->
    <sql id="select_order_conditions">
        ORDER BY created_date DESC
    </sql>

    <select id="findById" resultMap="RoleAuthorityResult" parameterType="com.ch.entity.sys.Role">
        SELECT
          r.*,
          a.id AS auth_id,
          a.name AS auth_name,
          a.auth_url,
          a.parent,
          a.display_sort,
          a.remark AS auth_remark,
          a.created_date AS auth_created_date,
          a.updated_date AS auth_updated_date
        FROM
          sys_role r,
          sys_role_authority ra,
          sys_authority a
        WHERE
          r.id = ra.role_id AND ra.authority_id = a.id AND r.id = #{id}
    </select>

    <select id="findByName" resultMap="RoleAuthorityResult" parameterType="com.ch.entity.sys.Role">
        SELECT
          r.*,
          a.id AS auth_id,
          a.name AS auth_name,
          a.auth_url,
          a.parent,
          a.display_sort,
          a.remark AS auth_remark,
          a.created_date AS auth_created_date,
          a.updated_date AS auth_updated_date
        FROM
          sys_role r,
          sys_role_authority ra,
          sys_authority a
        WHERE
          r.id = ra.role_id AND ra.authority_id = a.id AND r.name = #{name}
    </select>

    <select id="findAll" resultMap="RoleAuthorityResult">
        SELECT
          r.*,
          a.id AS auth_id,
          a.name AS auth_name,
          a.auth_url,
          a.parent,
          a.display_sort,
          a.remark AS auth_remark,
          a.created_date AS auth_created_date,
          a.updated_date AS auth_updated_date
        FROM
          sys_role r
        LEFT JOIN sys_role_authority ra ON r.id = ra.role_id
        LEFT JOIN sys_authority a ON ra.authority_id = a.id
        <include refid="select_query_conditions"></include>
        <include refid="select_order_conditions"></include>
    </select>

    <insert id="insertRoleAuth" parameterType="java.util.HashMap">
        INSERT INTO sys_role_authority (`role_id`, `authority_id`) VALUES
        <foreach collection="authIds" item="authId" separator=",">
            (#{roleId}, #{authId})
        </foreach>
    </insert>

    <delete id="deleteByRoleId" parameterType="java.lang.Integer">
        DELETE FROM sys_role_authority WHERE `role_id` = #{roleId}
    </delete>

</mapper>

