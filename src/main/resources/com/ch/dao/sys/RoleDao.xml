<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ch.dao.sys.RoleDao">
    <!-- Role -->
    <resultMap id="RoleResult" type="Role">
        <id column="id" property="id"/>
        <result column="role_name" property="roleName"/>
        <result column="roles" property="roles"/>
        <result column="remark" property="remark"/>
        <result column="created_date" property="createdDate"/>
        <result column="updated_date" property="updatedDate"/>
        <collection column="id" property="menus" select="select_menus_by_role_id"></collection>
    </resultMap>

    <!-- Menu -->
    <resultMap id="MenuResult" type="Menu">
        <id column="id" property="id"/>
        <result column="menu_name" property="menuName"/>
        <result column="menu_url" property="menuUrl"/>
        <result column="parent_id" property="parentId"/>
        <result column="display_sort" property="displaySort"/>
        <result column="display_type" property="displayType"/>
        <result column="permission" property="permission"/>
        <result column="icon" property="icon"/>
        <result column="remark" property="remark"/>
        <result column="created_date" property="createdDate"/>
        <result column="updated_date" property="updatedDate"/>
    </resultMap>

    <select id="select_menus_by_role_id" resultMap="MenuResult" parameterType="java.lang.Integer">
        SELECT
            m.id,
            m.menu_name,
            m.menu_url,
            m.parent_id,
            m.display_sort,
            m.display_type,
            m.permission,
            m.icon,
            m.remark,
            m.created_date,
            m.updated_date
        FROM
            sys_menu m,
            sys_role_menu rm,
            sys_role r
        WHERE
            m.id = rm.menu_id AND r.id = rm.role_id AND r.id = #{id}
        ORDER BY
            m.display_sort ASC
    </select>

    <!-- all column -->
    <sql id="all_column">
        id,
        role_name,
        roles,
        remark,
        created_date,
        updated_date
    </sql>

    <!-- query conditions -->
    <sql id="select_query_conditions">
        <if test="roleName != null and roleName != ''">
            AND role_name LIKE CONCAT("%",#{roleName},"%")
        </if>
        <if test="roles != null and roles != ''">
            AND roles LIKE CONCAT("%",#{roles},"%")
        </if>
    </sql>

    <!-- order conditions -->
    <sql id="select_order_conditions">
        ORDER BY created_date DESC
    </sql>

    <select id="findAll" resultMap="RoleResult" parameterType="Role">
        SELECT
            <include refid="all_column"></include>
        FROM
            sys_role
        WHERE
            1 = 1
        <include refid="select_query_conditions"></include>
        <include refid="select_order_conditions"></include>
    </select>

    <select id="findById" resultMap="RoleResult" parameterType="Role">
        SELECT
            <include refid="all_column"></include>
        FROM
            sys_role
        WHERE
            id = #{id}
    </select>

    <select id="findByRoleName" resultMap="RoleResult" parameterType="Role">
        SELECT
            <include refid="all_column"></include>
        FROM
            sys_role
        WHERE
            role_name = #{roleName}
    </select>

    <insert id="batchInsertRoleMenu">
        INSERT INTO sys_role_menu
            (role_id, menu_id)
        VALUES
        <foreach collection="rms" item="rm" separator=",">
            (#{rm.roleId}, #{rm.menuId})
        </foreach>
    </insert>

    <delete id="deleteByRoleId" parameterType="java.lang.Integer">
        DELETE FROM
            sys_role_menu
        WHERE
            role_id = #{roleId}
    </delete>
</mapper>